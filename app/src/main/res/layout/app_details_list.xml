<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sr_no"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="1."
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="App Name : "
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/sr_no"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:id="@+id/app_name_value"
        android:text="XXXX"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/app_name_title"
        app:layout_constraintStart_toEndOf="@+id/app_name_title"
        app:layout_constraintTop_toTopOf="@+id/app_name_title"
        app:layout_constraintVertical_bias="0.0" />\

    <TextView
        android:id="@+id/app_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="9dp"
        android:text="App Id : "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_title" />

    <TextView
        android:id="@+id/app_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="XXXX"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/app_id"
        app:layout_constraintStart_toEndOf="@+id/app_id"
        app:layout_constraintTop_toTopOf="@+id/app_id"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="10dp"
        android:text="App Version : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="XXXX"
        android:textSize="16dp"
        android:id="@+id/app_version_value"
        app:layout_constraintBottom_toBottomOf="@+id/app_version"
        app:layout_constraintStart_toEndOf="@+id/app_version"
        app:layout_constraintTop_toTopOf="@+id/app_version"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>